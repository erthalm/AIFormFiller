{
  "manifest_version": 3,
  "name": "AI Form Filler (File Search)",
  "version": "1.0.0",
  "description": "Autofill web forms using answers retrieved from your OpenAI File Search documents.",
  "action": {
    "default_title": "AI Form Filler",
    "default_icon": {
      "16": "icon-noform.png",
      "32": "icon-noform.png",
      "48": "icon-noform.png",
      "128": "icon-noform.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
